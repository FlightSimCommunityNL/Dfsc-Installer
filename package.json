{
  "name": "dsfc-installer",
  "private": true,
  "version": "0.1.3",
  "description": "Dutch Flight Sim Community Installer (Windows-only target)",
  "author": "Grazzy_Duck / Bas",
  "main": "out/main/index.js",
  "type": "module",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint .",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win --x64"
  },
  "dependencies": {
    "check-disk-space": "^3.4.0",
    "dompurify": "^3.3.1",
    "electron-store": "^11.0.2",
    "electron-updater": "^6.3.0",
    "extract-zip": "^2.0.1",
    "fs-extra": "^11.3.0",
    "marked": "^12.0.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "undici": "^7.21.0"
  },
  "devDependencies": {
    "@swc/core": "^1.13.5",
    "@types/dompurify": "^3.0.5",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^25.2.3",
    "@types/react": "^18.3.28",
    "@types/react-dom": "^18.3.7",
    "@vitejs/plugin-react": "^5.1.4",
    "autoprefixer": "^10.4.21",
    "electron": "^40.3.0",
    "electron-builder": "^26.7.0",
    "electron-vite": "^5.0.0",
    "eslint": "^9.39.2",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.19",
    "typescript": "^5.7.3",
    "vite": "^7.3.1"
  },
  "build": {
    "productName": "DFSC Installer",
    "icon": "build/icon.png",
    "appId": "nl.flightsimcommunity.dfsc.installer",
    "copyright": "Copyright (c) 2026 Grazzy_Duck / Bas",
    "asar": true,
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "extraMetadata": {
      "name": "dfsc-installer",
      "productName": "DFSC Installer",
      "author": "FlightSimCommunityNL"
    },
    "files": [
      "out/**",
      "resources/**"
    ],
    "extraResources": [
      {
        "from": "resources",
        "to": "resources",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "build/icon.ico",
        "to": "icon.ico"
      }
    ],
    "win": {
      "target": ["nsis"],
      "icon": "build/icon.ico"
    },
    "mac": {
      "icon": "build/icon.icns"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "uninstallDisplayName": "DFSC Installer",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "DFSC Installer"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "FlightSimCommunityNL",
        "repo": "Dfsc-Installer"
      }
    ]
  }
}
